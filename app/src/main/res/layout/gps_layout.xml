<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gps_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGpsBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_centerInParent="true"
        android:drawableLeft="@drawable/current_location"
        android:drawablePadding="4dp"

        android:drawableStart="@drawable/current_location"
        android:gravity="center"

        android:text="@string/location_txt"
        android:textAllCaps="true"
        android:textColor="@color/colorMediumBrown"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>